<div class="d-flex flex-row gap-3">
    <div class="d-flex flex-column mb-2">
        <small>TfsZ</small>
        <div class="d-flex flex-row slider-container">
            @Html.TextBoxFor(m => m.TfsZ, new { @type="range", @class = "slider",min="0.0", max="1.0", step="0.01" })
            <label>0</label>
        </div>
    </div>
    <div class="d-flex flex-column mb-2">
        <small>-</small>
        <div class="d-flex flex-row slider-container">
            <input class="slider" type="range" value="0" disabled />
            <label></label>
        </div>
    </div>
</div>


<div class="d-flex flex-column mb-2">
    <small>Mirostat</small>
    @Html.DropDownListFor(m => m.Mirostat,  Html.GetEnumSelectList<LLama.Common.MirostatType>(), new { @class = "form-control form-select" })
</div>

